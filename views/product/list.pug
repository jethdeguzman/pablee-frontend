extends ../layout

block content
  block content
  .navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        a.navbar-brand(href='../') Pablee
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
          span.icon-bar
          span.icon-bar
          span.icon-bar
      #navbar-main.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/merchant/products/sync') Sync Products
          li
            a(href='/logout') Logout
  br
  br
  br
  if products.length > 0
    .container
      .row
        each product in products
          .col-md-4
            .thumbnail
              img(src= product.imageUrl, alt= product.title, style='width:310px;')
              .caption
                h4.pull-right= '$' + product.price
                h4
                  a(href='#')= product.title
                p!= product.description
  else
    .container
      .row
        h3 No Products at the moment. <a href='/merchant/products/sync'>Sync products now</a>.
